<!doctype html>
<html lang="en">

<head>
    {% include 'partials/head.nj' %}
</head>

<body>
<header id="top" class="intro">
    <div class="text-center v-align">
        <img src="{{ settings.profile_picture }}"
             width="253"
             height="253" alt="Profile picture" class="img-circle">
        <h1>{{ settings.author }}</h1>
        <hr>
        <h2>{{ settings.profession }}</h2>
        <div class="text-center know-more">
            <button type="button" class="btn-rectangle" onclick="jumpToAnchor('#about')">
                <i class="fa fa-arrow-down" aria-hidden="true"></i> Know more
            </button>
            <button type="button" class="btn-rectangle"
                    onclick="window.open('https://joaosilva2095.keybase.pub/personal-website/resumejoaosilva.pdf','_blank')">
                <i class="fa fa-graduation-cap" aria-hidden="true"></i> My Résumé
            </button>
        </div>
    </div>
</header>
{% include 'partials/navbar.nj' %}
<main>
    <!-- About section -->
    <section id="about">
        <header>
            <h2>About</h2>
        </header>
        <hr>
        <div class="row text-left about-me">
            <div class="col-md-offset-3 col-md-4">
                {% import "macros/about.nj" as about_macro %}
                {% for item in about %}
                    {% if loop.index0 < (loop.length / 2) %}
                        {{ about_macro.item(item.title, item.value, item.icon) }}
                    {% endif %}
                {% endfor %}
            </div>
            <div class="col-md-4">
                {% import "macros/about.nj" as about_macro %}
                {% for item in about %}
                    {% if loop.index0 >= (loop.length / 2) %}
                        {{ about_macro.item(item.title, item.value, item.icon) }}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Timeline section -->
    <section id="history">
        <header>
            <h2>History</h2>
        </header>
        <hr>
        <div class="timeline-content text-center">
            {% import "macros/timeline.nj" as timeline_macro %}
            {% for item in timeline %}
                {{ timeline_macro.item(loop.index0 % 2 == 0, item.title, item.description, item.date, item.link, item.link_title, item.image, item.icon) }}
            {% endfor %}
        </div>
    </section>
    <!-- Skills section -->
    <section id="skills">
        <header>
            <h2>Skills</h2>
        </header>
        <hr>
        <div class="row text-center skill-set">
            <!-- Left column -->
            <div class="col-md-offset-2 col-md-4 col-xs-12">
                <h3>Hard Skills</h3>
                <hr>
                {% import "macros/skill.nj" as skill_macro %}
                {% for item in skills.hard %}
                    {{ skill_macro.item(item.title, item.value) }}
                {% endfor %}
            </div>
            <!-- Right column -->
            <div class="col-md-4 col-xs-12">
                <h3>Soft Skills</h3>
                <hr>
                {% import "macros/skill.nj" as skill_macro %}
                {% for item in skills.soft %}
                    {{ skill_macro.item(item.title, item.value) }}
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Portfolio section -->
    <section id="portfolio">
        <header>
            <h2>Portfolio</h2>
        </header>
        <hr>
        <div class="portfolio-content container">
            <div class="row text-center portfolio-page">
                {% import "macros/portfolio.nj" as portfolio_macro %}
                {% for item in portfolio %}
                    {{ portfolio_macro.item(item.title, item.description, item.image, item.links) }}
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Contact section -->
    <section id="contact">
        <header>
            <h2>Contact</h2>
        </header>
        <hr>
        <div class="row text-center">
            <form id="contactForm" name="contactForm" netlify-honeypot="bot-field" netlify
                  class="col-md-offset-4 col-md-4 contact-form">
                <div class="hidden form-group">
                    <label for="bot-field">Bot Field:</label>
                    <input id="bot-field" type="text" name="bot-field" placeholder="Your bot field"
                           class="form-control">
                </div>
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input id="name" type="text" name="name" required="required" placeholder="Your name"
                           class="form-control">
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input id="email" type="email" name="email" required="required" placeholder="Your email"
                           class="form-control">
                </div>
                <div class="form-group">
                    <fieldset>
                        <legend>Phone:</legend>
                        <select id="ext" name="ext" required="required" class="form-control">
                            {% include 'partials/countryCodes.nj' %}
                        </select>
                        <input id="phone" type="tel" name="phone" required="required" placeholder="Your phone number"
                               class="form-control">
                    </fieldset>
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea id="message" name="message" required="required" placeholder="Your message" rows="9"
                              class="form-control"></textarea>
                </div>
                <button type="submit" class="btn-rectangle">Send</button>
            </form>
            <div id="submitResult" class="col-md-offset-4 col-md-4 alert alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            </div>
        </div>
    </section>
</main>
</body>
{% include 'partials/footer.nj' %}
</html>

