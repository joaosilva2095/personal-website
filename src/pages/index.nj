<!doctype html>
<html lang="en">

<head>
    {% include 'components/head.nj' %}
</head>

<body>
<header id="top" class="intro">
    <div class="text-center v-align">
        <img src="{{ settings.profile_picture }}"
             width="253"
             height="253" alt="Profile picture" class="img-circle">
        <h1>{{ settings.author }}</h1>
        <hr>
        <h2>{{ settings.profession }}</h2>
        <div class="text-center know-more">
            <button type="button" class="btn-rectangle" onclick="jumpToAnchor('#about')">
                <i class="fa fa-arrow-down" aria-hidden="true"></i> Know more
            </button>
            <button type="button" class="btn-rectangle"
                    onclick="window.open('https://joaosilva2095.keybase.pub/personal-website/resumejoaosilva.pdf','_blank')">
                <i class="fa fa-graduation-cap" aria-hidden="true"></i> My Résumé
            </button>
        </div>
    </div>
</header>
{% block nav %}
    {% include 'components/navbar.nj' %}
{% endblock %}
<main>
    <!-- About section -->
    {% block about %}
        {% include 'components/about.nj' %}
    {% endblock %}
    <!-- Timeline section -->
    {% block history %}
        {% include 'components/timeline.nj' %}
    {% endblock %}
    <!-- Skills section -->
    {% block skills %}
        {% include 'components/skills.nj' %}
    {% endblock %}
    <!-- Portfolio section -->
    {% block portfolio %}
        {% include 'components/portfolio.nj' %}
    {% endblock %}
    <!-- Contact section -->
    {% block contact %}
        {% include 'components/contact.nj' %}
    {% endblock %}
</main>
</body>

{% block footer %}
    {% include 'components/footer.nj' %}
{% endblock %}

{% block footerScripts %}
    {% include 'partials/footerScripts.nj' %}
{% endblock %}
</html>
